@page "/clients"
@inject NavigationManager NavigationManager

<MudButton @onclick='() => NavigationManager.NavigateTo("/customers/add")' Class="mb-3" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Primary">Add New</MudButton>
<MudTable Items="@Clients">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Clients</MudText>
        <MudSpacer />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>First Name</MudTh>
        <MudTh>Surname</MudTh>
        <MudTh>Cellphone</MudTh>
        <MudTh>Id Number</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.FirstName</MudTd>
        <MudTd>@context.Surname</MudTd>
        <MudTd>@context.Cellphone</MudTd>
        <MudTd>@context.IdNumber</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {

    private IEnumerable<CustomerListModel> Clients = new List<CustomerListModel>();

    protected override async Task OnInitializedAsync()
    {
        Clients = MockCustomerData.GetCustomers();
    }
}